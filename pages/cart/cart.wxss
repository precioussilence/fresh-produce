/* pages/cart/cart.wxss */
.cart-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 180rpx;
}
.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}
.header-section {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address-section {
  flex: 1;
  display: flex;
  align-items: center;
}
.address-icon {
  margin-right: 20rpx;
  color: #666;
}
.address-detail {
  font-size: 28rpx;
  margin-bottom: 6rpx;
  font-weight: bold;
}
.address-arrow {
  color: #ccc;
  margin-left: 10rpx;
}
.edit-btn {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
}
.goods-section {
  margin-bottom: 20rpx;
}
.item-content {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 10rpx 0;
}
.item-checkbox {
  padding: 0;
}
.item-image {
  margin-right: 40rpx;
}
.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}
.item-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.item-price {
  font-size: 32rpx;
  color: #fa4126;
  font-weight: bold;
}
.item-count {
  margin-left: auto;
}
.item-delete {
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.checkout-section {
  position: sticky;
  bottom: 180rpx;
  left: 0;
  right: 0;
  z-index: 100;
}
.custom-checkbox {
  padding: 0 !important;
}
.checkout-left {
  display: flex;
  align-items: center;
}
.select-all {
  margin-right: 30rpx;
}
.total-amount {
  font-size: 28rpx;
}
.price {
  color: #fa4126;
  font-weight: bold;
  font-size: 32rpx;
}
.checkout-right {
  margin-left: 20rpx;
}
