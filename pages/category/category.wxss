/* pages/category/category.wxss */
.side-bar-wrapper {
  display: flex;
  height: 100vh;
  overflow: hidden;

  --td-grid-item-text-font-size: 24rpx;
}

.side-bar-wrapper .content {
  flex: 1;
  transition: transform 0.3s ease;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
  box-sizing: border-box;
  height: 100%;
}

.side-bar-wrapper .title {
  padding-left: 40rpx;
  margin-bottom: 8rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  color: var(--td-text-color-primary);
}

.goods-cell {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.goods-left {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-right: 10rpx;
}

.goods-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.goods-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
  flex: 1;
}

.goods-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.goods-price-info {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  max-width: 70%;
}

.goods-price {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.goods-price-symbol {
  font-size: 24rpx;
}

.goods-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.goods-sold {
  font-size: 22rpx;
  color: #999;
}

.goods-cart {
  color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.goods-cart::after {
  content: '';
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  left: -10rpx;
}

.goods-cart:active {
  transform: scale(0.9);
  transition: transform 0.1s ease;
}
