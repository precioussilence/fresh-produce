/* pages/home/home.wxss */
.home-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 180rpx;
}
.swiper-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.category-matrix-section {
  display: block;
  margin-bottom: 32rpx;
}
.category-matrix-section .image {
  position: inherit;
}
.category-matrix-section .image::before {
  content: ' ';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  border-radius: 24rpx;
  border: 2rpx solid #eee;
  transform-origin: 0 0;
  transform: scale(0.5);
}
.categrory-tab-section {
  margin-bottom: 32rpx;
}
.goods-list-section {
  margin-top: 20rpx;
}
.goods-cell {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.goods-left {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.goods-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}
.goods-tag {
  position: absolute;
  top: 0;
  left: 0;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx 0 4rpx 0;
  z-index: 1;
}
.goods-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
  flex: 1;
}

.goods-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.goods-price-info {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  max-width: 70%;
}

.goods-price {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.goods-price-symbol {
  font-size: 24rpx;
}

.goods-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.goods-sold {
  font-size: 22rpx;
  color: #999;
}

.goods-cart {
  color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
}
